{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via nodemon",
            "cwd": "${workspaceRoot}",
            "port": 3010,
            "program": "",
            "runtimeExecutable": "npm",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "start"
            ]
        },
        {
            "name": "Attach to Node",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 3010,
            "restart": true,
            "protocol": "inspector",
        }
    ]
}