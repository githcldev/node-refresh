{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./client/src/lib/index",
    "paths": {
      "@angular/*": ["../../../../node_modules/@angular/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "common",
    "dist",
    "node_modules",
    "server"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
